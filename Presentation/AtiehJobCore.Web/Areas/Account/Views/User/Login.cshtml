@model LoginModel

@{
    Layout = "_AccountLayout";

    //title
    Html.AddTitleParts(T("PageTitle.Login").Text);

    //register URL with return URL (if specified)
    var registerUrl = Url.RouteUrl("RegisterJobseeker");
    if (!string.IsNullOrEmpty(this.Context.Request.Query["returnUrl"]))
    {
        registerUrl = WebHelper.ModifyQueryString(registerUrl,
            "returnurl=" + WebUtility.UrlEncode(this.Context.Request.Query["returnUrl"]), null);
    }
}

<div class="row">
    <h2 class="generalTitle">@T("Account.Login.Welcome")</h2>
    <partial name="_ExternalAuthentication.Errors" />

    <form asp-route="Login" asp-route-returnurl="@Context.Request.Query["ReturnUrl"]" method="post">
        <h5 class="card-header"><strong>@T("Account.Login.ReturningUser")</strong></h5>

        <div class="col-12">
            <div asp-validation-summary="ModelOnly" class="message-error">@T("Account.Login.Unsuccessful")</div>
            <div>
                @if (Model.UsernamesEnabled)
                {
                    <div class="row">
                        <div class="input-field col s12">
                            <input type="text" asp-for="Username" class="validate" autofocus="autofocus" />
                            <label asp-for="Username">@T("Account.Login.Fields.UserName"):</label>
                            <span asp-validation-for="Username"></span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="input-field col s12">
                            <input type="text" asp-for="EmailOrMobileOrNationalCode" autocomplete="off"
                                   class="validate" autofocus="autofocus" />
                            <label asp-for="EmailOrMobileOrNationalCode">@T("Account.Login.Fields.EmailOrMobileOrNationalCode"):</label>
                            <span asp-validation-for="EmailOrMobileOrNationalCode"></span>
                        </div>
                    </div>
                }

                <div class="row">
                    <div class="input-field col s12">
                        <input type="password" asp-for="Password" class="validate" />
                        <label asp-for="Password">@T("Account.Login.Fields.Password"):</label>
                        <span asp-validation-for="Password"></span>
                    </div>
                </div>

                <div class="row">
                    <label>
                        <input asp-for="RememberMe" type="checkbox" />
                        <span>@T("Account.Login.Fields.RememberMe")</span>
                    </label>
                </div>
                <div class="row">
                    <span>
                        <a asp-route="PasswordRecovery">@T("Account.Login.ForgotPassword")</a>
                    </span>
                </div>
                @if (Model.DisplayCaptcha)
                {
                    <div class="captcha-box">
                        <captcha />
                    </div>
                }
            </div>
        </div>

        <div class="card-footer">
            <div class="buttons">
                <input class="btn btn-info login-button" type="submit" value="@T("Account.Login.LoginButton")" />
            </div>
        </div>
    </form>
</div>
<div class="col-lg-6 col-12">
    <div class="card-body register-block">
        <h5><strong>@T("Account.Login.NewUser")</strong></h5>
        <div class="text generalMarginSupporter">
            @T("Account.Login.NewUserText")
        </div>
        <div class="buttons">
            <input type="button" class="btn btn-secondary register-button"
                   onclick="location.href='@registerUrl'" value="@T("Account.Register")" />
        </div>
    </div>
</div>

