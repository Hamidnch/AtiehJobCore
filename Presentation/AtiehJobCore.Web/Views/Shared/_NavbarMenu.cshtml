<nav id="main-nav" class="navbar navbar-icon-top navbar-expand-lg navbar-dark bg-dark">
    <a asp-controller="Home" asp-action="Index" asp-area="" class="navbar-brand d-none d-sm-inline-block">
        @T("AtiehJob.Logo")
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse"
            data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa fa-home" aria-hidden="true"></i>
                    خانه
                    <span class="sr-only">(current)</span>
                </a>
            </li>
            @if (IsAuthenticated())
            {
                if (IsAdminRole)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index" asp-area="Admin">
                            <i class="fa fa-atlas" aria-hidden="true">
                                <span class="badge badge-danger">11</span>
                            </i>
                            مدیر سیستم
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link" asp-controller="User" asp-action="Logout" asp-area="Account">
                        <i class="fa fa-sign-out-alt" aria-hidden="true"></i>
                        خروج
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" asp-action="Login" asp-controller="User" asp-area="Account">
                        <i class="fa fa-sign-in-alt" aria-hidden="true">
                        </i>
                        ورود
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="User" asp-action="RegisterJobseeker" asp-area="Account">
                        <i class="fa fa-plug" aria-hidden="true">
                        </i>
                        ثبت نام کارجو
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="User" asp-action="RegisterEmployer" asp-area="Account">
                        <i class="fa fa-plug" aria-hidden="true">
                        </i>
                        ثبت نام کارفرما
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="User" asp-action="RegisterPlacement" asp-area="Account">
                        <i class="fa fa-plug" aria-hidden="true">
                        </i>
                        ثبت نام کاریاب
                    </a>
                </li>
            }

            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-envelope">
                        <span class="badge badge-primary">11</span>
                    </i>
                    تست
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-controller="Home" asp-action="ColumnsOne" asp-area="">تک ستونی</a>
                    <a class="dropdown-item" asp-controller="Home" asp-action="ColumnsTwo" asp-area="">دو ستونی</a>
                    <a class="dropdown-item" asp-controller="Home" asp-action="ColumnsThird" asp-area="">سه ستونی</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-controller="Home" asp-action="Error" asp-area="">خطا</a>
                </div>
            </li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fa fa-bell">
                        <span class="badge badge-info">11</span>
                    </i>
                    پیام های دریافتی
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fa fa-globe">
                        <span class="badge badge-success">11</span>
                    </i>
                    پیام های ارسالی
                </a>
            </li>
            @await Component.InvokeAsync("LanguageSelector")
        </ul>
    </div>
</nav>


